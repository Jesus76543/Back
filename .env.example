# Database Configuration - MongoDB Atlas
# Replace with your actual MongoDB Atlas connection string
USER_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/user?retryWrites=true&w=majority
ORDENES_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/ordenes?retryWrites=true&w=majority
ROLES_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/roles?retryWrites=true&w=majority
PRODUCTOS_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/productos?retryWrites=true&w=majority

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration - REQUIRED FOR SECURITY
# Generate a secure secret with: node -p "require('crypto').randomBytes(64).toString('hex')"
JWT_SECRET=
JWT_EXPIRES_IN=24h

# bcrypt Configuration
BCRYPT_SALT_ROUNDS=10
